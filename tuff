<!DOCTYPE html>
<html>
<head>
  <title>Snowy Roblox Profile</title>
  <style>
    body { 
      margin: 0; background: linear-gradient(to bottom, #1e3c72, #2a5298); 
      font-family: 'Roboto', sans-serif; color: white; overflow: hidden;
      height: 100vh; display: flex; align-items: center; justify-content: center;
    }
    .container {
      background: rgba(0,0,0,0.6); padding: 40px; border-radius: 20px; text-align: center;
      box-shadow: 0 0 30px rgba(0,200,255,0.5);
    }
    input {
      padding: 15px; width: 300px; border: none; border-radius: 10px; font-size: 18px; margin: 20px 0;
    }
    button {
      padding: 15px 30px; background: #00c853; color: white; border: none; 
      border-radius: 10px; font-size: 20px; cursor: pointer; transition: 0.3s;
    }
    button:hover { background: #00e676; transform: scale(1.05); }
    canvas { position: absolute; top: 0; left: 0; z-index: -1; }
  </style>
</head>
<body>

<canvas id="snow"></canvas>

<div class="container">
  <h1>❄️ Roblox Profile Hub ❄️</h1>
  <input type="text" id="username" placeholder="Enter your Roblox username">
  <br>
  <button onclick="showProfile()">Show My Profile</button>
</div>

<script>
  // Snow effect
  const canvas = document.getElementById('snow');
  const ctx = canvas.getContext('2d');
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;

  const snowflakes = [];
  for(let i = 0; i < 150; i++) {
    snowflakes.push({
      x: Math.random() * canvas.width,
      y: Math.random() * canvas.height,
      r: Math.random() * 4 + 1,
      speed: Math.random() * 1 + 0.5
    });
  }

  function drawSnow() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    ctx.fillStyle = 'rgba(255, 255, 255, 0.8)';
    ctx.beginPath();
    for(let s of snowflakes) {
      ctx.moveTo(s.x, s.y);
      ctx.arc(s.x, s.y, s.r, 0, Math.PI * 2);
      s.y += s.speed;
      if(s.y > canvas.height) s.y = 0;
      s.x += Math.random() * 2 - 1;
    }
    ctx.fill();
    requestAnimationFrame(drawSnow);
  }
  drawSnow();

  function showProfile() {
    const user = document.getElementById('username').value.trim();
    if(user) {
      window.open(`https://www.roblox.com/users/profile?username=${user}`, '_blank');
    } else {
      alert("Please enter a username!");
    }
  }
</script>
</body>
</html>
