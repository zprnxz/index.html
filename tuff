<body>
    <div class="container">
        <h1>TikTok Username Morpher</h1>
        <p>Enter details for the fake swap (demo onlyâ€”no real changes!)</p>
        
        <div class="form-group">
            <label for="targetUser">Target TikTok Username:</label>
            <input type="text" id="targetUser" placeholder="@cooluser" value="@example">
        </div>
        
        <div class="form-group">
            <label for="newUser">Desired New Username:</label>
            <input type="text" id="newUser" placeholder="@newcooluser" value="@grokified">
        </div>
        
        <button id="morphButton">Connect & Morph Username</button>
        
        <div class="loader" id="loader">
            <div class="spinner"></div>
            <p>Connecting to TikTok servers... (simulated)</p>
        </div>
        
        <div class="status-msg" id="status"></div>
        
        <div class="profile-card" id="profileCard">
            <h3>Updated Profile:</h3>
            <div class="username-display" id="usernameDisplay">@example</div>
            <p>Bio: Just morphed by Grok!</p>
        </div>
    </div>

    <script>
        // Fixed version - we get the button properly
        document.getElementById('morphButton').addEventListener('click', function() {
            const button = this; // Now this works perfectly!
            const target = document.getElementById('targetUser').value.trim();
            const newUser = document.getElementById('newUser').value.trim();
            const loader = document.getElementById('loader');
            const status = document.getElementById('status');
            const profile = document.getElementById('profileCard');
            const display = document.getElementById('usernameDisplay');
            
            if (!target || !newUser) {
                alert('Fill in both usernames!');
                return;
            }
            
            button.disabled = true;
            button.textContent = 'Morphing...';
            loader.style.display = 'block';
            status.textContent = '';
            status.classList.remove('show');
            profile.style.display = 'none';
            
            setTimeout(() => {
                display.textContent = target;
                display.classList.add('glitching');
                status.textContent = 'Glitching connection...';
                status.classList.add('show');
            }, 1000);
            
            setTimeout(() => {
                display.classList.remove('glitching');
                display.textContent = newUser;
                status.textContent = 'Morph complete! (Fake update only)';
                status.classList.add('show');
                profile.style.display = 'block';
                loader.style.display = 'none';
                button.disabled = false;
                button.textContent = 'Morph Again';
            }, 3000);
        });
    </script>
